                let txt = a.text;
                if(id!==1 && a.numberInSurah===1) txt = txt.replace("Ø¨ÙØ³Ù’Ù…Ù Ø§Ù„Ù„ÙÙ‘Ù‡Ù Ø§Ù„Ø±ÙÙ‘Ø­Ù’Ù…ÙÙ°Ù†Ù Ø§Ù„Ø±ÙÙ‘Ø­ÙÙŠÙ…Ù", "");
                html += txt + ` <span style="color:var(--main); font-weight:bold;">ï´¿${a.numberInSurah}ï´¾</span> `;
            });
            document.getElementById('m-content').innerHTML = html;
        } catch(e) { document.getElementById('m-content').innerHTML = "Ø¦ÛŒÙ†ØªÛ•Ø±Ù†ÛØª Ù¾ÛØ¯Ú¤ÛŒÛ•."; }
    }

    function closeModal() {
        document.getElementById('quranModal').style.display = "none";
        document.getElementById('m-audio').pause();
        window.scrollTo(0, lastScroll);
    }
